---
import { type CollectionEntry } from "astro:content";
type Props = CollectionEntry<"blog">;

const { data, id } = Astro.props;

const fullDate = data.pubDate.toLocaleDateString("en", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<li
  class="group relative flex flex-col border border-zinc-300 bg-white p-4 hover:border-zinc-900 dark:border-zinc-700 dark:bg-zinc-900 dark:hover:border-zinc-100"
>
  <time
    datetime={data.pubDate.toISOString()}
    class="mb-1 text-sm tracking-wide uppercase"
    >{fullDate}
  </time>
  <a
    class="font-semibold text-zinc-900 before:absolute before:inset-0 dark:text-zinc-100"
    href={`/blog/${id}/`}
  >
    {data.title}
  </a>
  <p class="mt-2 leading-relaxed">{data.description}</p>
</li>
