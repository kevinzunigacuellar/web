---
import Badge from "@components/Badge.astro";
import { Image } from "@astrojs/image/components";
import type { ImageMetadata } from "@astrojs/image/dist/vite-plugin-astro-image";

export interface Props {
  title: string;
  img: string | ImageMetadata;
  author: string;
  year: number;
  comment: string;
  reading?: boolean;
  loading?: "lazy" | "eager";
}
const {
  title,
  img,
  author,
  year,
  comment,
  reading,
  loading = "lazy",
} = Astro.props as Props;
---

<li
  class="list-none overflow-hidden rounded-xl shadow-black/40 w-full sm:max-w-4xl"
>
  <article class="pt-6 sm:flex sm:gap-8 sm:pb-6">
    <Image
      src={img}
      alt={title}
      width={450}
      height={620}
      format="webp"
      class="rounded-xl w-full overflow-hidden sm:w-52"
      loading={loading}
    />
    <div class="w-full pt-6 sm:py-0 sm:px-6">
      <h2 class="mb-1.5 space-x-2 text-xl font-semibold text-white">
        {title}
      </h2>
      <div class="mb-2 sm:flex sm:items-baseline">
        <p class="space-x-0.5 text-sm text-zinc-400">
          <span class="text-zinc-300">{author}</span>{" "}
          <span>&middot;</span>
          <span class="pr-0 sm:pr-2">{year}</span>
        </p>
        {reading && <Badge text="reading" color="indigo" />}
      </div>
      <p class="py-1 leading-relaxed text-zinc-400">{`"${comment}"`}</p>
    </div>
  </article>
</li>
