---
import { Icon } from "astro-icon";

export interface Props {
  title: string;
  description: string;
  technologies?: string[];
  pageUrl?: string;
  githubUrl?: string;
  projectUrl?: string;
}

const { title, technologies, description, githubUrl, projectUrl } =
  Astro.props as Props;
---

<div
  class="p-6 flex flex-col gap-2 bg-zinc-800 text-zinc-400 rounded-xl border-t shadow shadow-black/40 border-zinc-700"
>
  <header class="flex justify-between items-center">
    <h2 class="text-xl font-semibold text-white">
      {title}<a href={projectUrl} target="_blank" rel="noopener noreferrer"
        ><Icon
          name="fa:external-link-square"
          class="w-4 inline-block ml-2 text-zinc-500 hover:text-zinc-300 transition-colors"
        />
      </a>
    </h2>
    <a href={githubUrl} target="_blank" rel="noopener noreferrer"
      ><Icon
        name="akar-icons:github-fill"
        class="w-6 hover:text-zinc-300 hover:scale-110 transition-all"
      />
    </a>
  </header>
  {
    technologies && (
      <ul class="flex gap-2 flex-wrap">
        {technologies.map((tech) => (
          <li class="bg-zinc-700 py-0.5 px-2 text-sm rounded-md">{tech}</li>
        ))}
      </ul>
    )
  }
  <p>{description}</p>
</div>
