---
import { Icon } from 'astro-icon'

export interface Props {
  text: string;
  logo: string;
}

const { text, logo } = Astro.props as Props;

---
<div class="flex items-center gap-4">
  <span class="w-11 h-11 flex items-center justify-center border-t border-zinc-700 bg-zinc-800 rounded-full"><Icon name={logo} class="w-6" /></span>
  <p class="text-zinc-400">{text}</p>
</div>